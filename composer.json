{
  "name": "matks/php-template-linter",
  "description": "Smarty and Twig basic linter",
  "type": "library",
  "keywords": [
    "console",
    "linter"
  ],
  "homepage": "https://github.com/matks/php-template-linter",
  "license": "MIT",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Mathieu Ferment",
      "email": "mathieu.ferment@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Matks\\PHPTemplateLinter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MatksTests\\": "tests/"
    }
  },
  "require": {
    "phpunit/phpunit": "^7.0",
    "symfony/console": "^5.0",
    "symfony/finder": "^5.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.0@dev",
    "symfony/filesystem": "^5.0"
  }
}
